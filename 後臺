<body>
    <header>
        <h1>管理員後台 - 分店管理</h1>
    </header>

    <div class="container">
        <!-- 新增分店表單 -->
        <h2>新增分店資訊</h2>
        <form id="add-branch-form">
            <div class="form-group">
                <label for="branch-name">分店名稱</label>
                <input type="text" id="branch-name" name="branch-name" required>
            </div>
            <div class="form-group">
                <label for="branch-id">統一編號 (預設為帳號)</label>
                <input type="text" id="branch-id" name="branch-id" required>
            </div>
            <div class="form-group">
                <label for="branch-address">地址</label>
                <input type="text" id="branch-address" name="branch-address" required>
            </div>
            <div class="form-group">
                <label for="branch-phone">電話號碼 (預設為密碼)</label>
                <input type="tel" id="branch-phone" name="branch-phone" required>
            </div>
            <div class="form-group">
                <label for="branch-permission">使用權限</label>
                <select id="branch-permission" name="branch-permission">
                    <option value="user">使用者</option>
                    <option value="admin">管理員</option>
                </select>
            </div>
            <div class="button">
                <button type="button" onclick="addBranch()">新增分店</button>
            </div>
        </form>

        <!-- 分店資訊表格 -->
        <h2>分店資訊列表</h2>
        <table id="branch-table">
            <thead>
                <tr>
                    <th>分店名稱</th>
                    <th>統一編號 (帳號)</th>
                    <th>地址</th>
                    <th>電話號碼 (密碼)</th>
                    <th>使用權限</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <!-- 預設範例資料 -->
                <tr>
                    <td>台北分店</td>
                    <td>12345678</td>
                    <td>台北市信義區</td>
                    <td>02-12345678</td>
                    <td>使用者</td>
                    <td>
                        <button class="edit-btn" onclick="editBranch(this)">編輯</button>
                        <button class="delete-btn" onclick="deleteBranch(this)">刪除</button>
                    </td>
                </tr>
                <tr>
                    <td>高雄分店</td>
                    <td>87654321</td>
                    <td>高雄市前鎮區</td>
                    <td>07-87654321</td>
                    <td>管理員</td>
                    <td>
                        <button class="edit-btn" onclick="editBranch(this)">編輯</button>
                        <button class="delete-btn" onclick="deleteBranch(this)">刪除</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <script>
        // 新增分店功能
        function addBranch() {
            const name = document.getElementById("branch-name").value;
            const id = document.getElementById("branch-id").value;
            const address = document.getElementById("branch-address").value;
            const phone = document.getElementById("branch-phone").value;
            const permission = document.getElementById("branch-permission").value;

            // 驗證欄位是否填寫完整
            if (!name || !id || !address || !phone || !permission) {
                alert("所有欄位都需要填寫！");
                return;
            }

            // 創建新分店資料行
            const table = document.getElementById("branch-table").getElementsByTagName("tbody")[0];
            const newRow = table.insertRow();
            newRow.insertCell(0).textContent = name;
            newRow.insertCell(1).textContent = id;
            newRow.insertCell(2).textContent = address;
            newRow.insertCell(3).textContent = phone;
            newRow.insertCell(4).textContent = permission;
            const actionCell = newRow.insertCell(5);
            actionCell.innerHTML = '<button class="edit-btn" onclick="editBranch(this)">編輯</button> <button class="delete-btn" onclick="deleteBranch(this)">刪除</button>';

            // 清空表單
            document.getElementById("add-branch-form").reset();
        }

        // 刪除分店功能
        function deleteBranch(button) {
            const row = button.parentElement.parentElement;
            row.parentElement.removeChild(row);
        }

        // 編輯分店功能
        function editBranch(button) {
            const row = button.parentElement.parentElement;
            const cells = row.getElementsByTagName("td");

            for (let i = 0; i < cells.length - 1; i++) {
                const content = cells[i].textContent;
                if (i < 4) {
                    cells[i].innerHTML = `<input type="text" value="${content}">`;
                } else if (i === 4) {
                    const options = `
                        <select>
                            <option value="user" ${content === "使用者" ? "selected" : ""}>使用者</option>
                            <option value="admin" ${content === "管理員" ? "selected" : ""}>管理員</option>
                        </select>`;
                    cells[i].innerHTML = options;
                }
            }

            // 更改按鈕為儲存
            button.textContent = "儲存";
            button.className = "save-btn";
            button.onclick = function () { saveBranch(this); };
        }

        // 儲存分店功能
        function saveBranch(button) {
            const row = button.parentElement.parentElement;
            const cells = row.getElementsByTagName("td");

            for (let i = 0; i < cells.length - 1; i++) {
                if (i < 4) {
                    const input = cells[i].getElementsByTagName("input")[0];
                    cells[i].textContent = input.value;
                } else if (i === 4) {
                    const select = cells[i].getElementsByTagName("select")[0];
                    cells[i].textContent = select.value === "user" ? "使用者" : "管理員";
                }
            }

            // 更改按鈕為編輯
            button.textContent = "編輯";
            button.className = "edit-btn";
            button.onclick = function () { editBranch(this); };
        }
    </script>
</body>
</html>
